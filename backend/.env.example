# F1 Analytics Backend - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# Database Configuration
# ============================================================================
# Primary database URL (used in production)
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database

# Optional: Local development database
LOCAL_DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/f1_analytics

# Optional: Development/staging database
DEV_DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database

# ============================================================================
# Application Settings
# ============================================================================
# Enable debug mode (True for development, False for production)
DEBUG=False

# Secret key for session encryption and security (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-change-this-in-production

# CORS allowed origins (comma-separated list of frontend URLs)
# For production, replace with your actual frontend URL
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# FastF1 Configuration
# ============================================================================
# Directory for caching F1 telemetry data (can be several GB)
FASTF1_CACHE_DIR=./cache
